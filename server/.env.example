# ─── MySQL Connection ───
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=tradevault

# ─── Server ───
PORT=3001

# ─── Local Screenshot Storage ───
# Absolute path where trade screenshots will be saved.
# The server creates subfolders: year/month/day/time/before|after.ext
# Example: C:/TradeVault/screenshots  or  /home/user/TradeVault/screenshots
SCREENSHOTS_DIR=./screenshots
